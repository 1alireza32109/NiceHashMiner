<Window x:Class="NHM.Wpf.Windows.Plugins.PluginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NHM.Wpf.Windows.Plugins"
        xmlns:vm="clr-namespace:NHM.Wpf.ViewModels"
        xmlns:plugins="clr-namespace:NHM.Wpf.ViewModels.Plugins"
        mc:Ignorable="d"
        Title="PluginWindow" Height="450" Width="800">
    <Window.DataContext>
        <plugins:PluginVM />
    </Window.DataContext>

    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type plugins:PluginListVM}">
                <local:PluginList DetailsClick="PluginEntry_OnDetailsClick" />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentPage}" />
    </Grid>
</Window>
