<Window x:Class="NHM.Wpf.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NHM.Wpf.Windows"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <TreeView Margin="10,10,10,10.5">
            <TreeViewItem Header="General" />
            <TreeViewItem Header="Profitability" />
            <TreeViewItem Header="Mining" IsExpanded="True" >
                <TreeViewItem Header="General" />
                <TreeViewItem Header="Switching" />
                <TreeViewItem Header="Advanced" />
            </TreeViewItem>
            <TreeViewItem Header="Advanced" IsExpanded="True">
                <TreeViewItem Header="General" />
                <TreeViewItem Header="Detection" />
                <TreeViewItem Header="Benchmarking" />
            </TreeViewItem>
        </TreeView>
        <Frame Content="Frame" Grid.Column="1" Margin="0,0,0,0.5"/>

    </Grid>
</Window>
