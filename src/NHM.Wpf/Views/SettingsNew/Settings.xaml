<UserControl x:Class="NHM.Wpf.Views.SettingsNew.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NHM.Wpf.Views.SettingsNew"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Background="White" Width="Auto" Height="450">
        <StackPanel Orientation="Horizontal" Margin="40,0,40,0" >
            <Button Content="General" />
            <Button Content="Advanced" HorizontalAlignment="Right"/>
        </StackPanel>
        <Grid Margin="40,17,40,0" Height="350">
            <Border BorderBrush="#eeeeee" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <local:SettingsGeneral ></local:SettingsGeneral>
                </ScrollViewer>
            </Border>
        </Grid>
       
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="40, 16, 40, 10">
            <Button Content="RESET TO DEFAULT" />
            <Button Content="SAVE" HorizontalAlignment="Right"/>
        </StackPanel>
    </StackPanel>
</UserControl>
